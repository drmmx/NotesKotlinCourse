<?xml version="1.0" encoding="utf-8"?>
<com.drmmx.notes.customviews.CreateTodoView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageButton"
        android:layout_width="@dimen/image_icon_default"
        android:layout_height="@dimen/image_icon_default"
        android:layout_marginStart="@dimen/item_margin_small"
        android:layout_marginTop="@dimen/item_margin_default"
        android:src="@drawable/ic_plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/todoEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_margin_small"
        android:layout_marginEnd="@dimen/item_margin_small"
        android:hint="@string/add_new_todo"
        app:layout_constraintBottom_toBottomOf="@id/imageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageButton"
        app:layout_constraintTop_toTopOf="@id/imageButton" />

</com.drmmx.notes.customviews.CreateTodoView>